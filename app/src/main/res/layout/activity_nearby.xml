<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nearby"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nayem.tourguide.activity.NearbyActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/backarrow"
        android:id="@+id/backToHomeFromNearBy"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/backToHomeFromNearBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#4458b3"
        android:id="@+id/nearbyTextView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/bodyLayout"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@id/nearbyTextView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/restaurent"
                    android:id="@+id/restaurantButton"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="22sp"
                    android:text="Restaurant"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/cafe"
                    android:id="@+id/cafeButton"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="22sp"
                    android:text="Cafe"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/hospital"
                    android:id="@+id/hospitalButton"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="22sp"
                    android:text="Hospital"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bank"
                    android:id="@+id/bankButton"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="22sp"
                    android:text="Bank"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
