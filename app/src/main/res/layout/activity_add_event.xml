<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context="com.nayem.tourguide.activity.AddEventActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/backarrow"
                android:id="@+id/backArrow"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Event"
                android:textSize="30dp"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:gravity="center"
                android:id="@+id/addEventTextView"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/travelDestinationEditText"
                android:hint="Travel Destination"
                android:textSize="25dp"
                android:padding="10dp"
                android:background="@drawable/corner_radius"
                android:layout_marginLeft="5dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:background="@drawable/corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/estimatedBudgetEditText"
                android:hint="Estimated Budget" />
            <EditText
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:inputType="date"
                android:onClick="fromDatePicker"
                android:background="@drawable/corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fromDateEditText"
                android:hint="From Date" />
            <EditText
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:padding="10dp"
                android:onClick="toDatePicker"
                android:inputType="date"
                android:background="@drawable/corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toDateEditText"
                android:hint="To Date" />
            <Button
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Create Event"
                android:textAllCaps="false"
                android:id="@+id/saveEventButton"
                android:textSize="25dp"
                android:textStyle="italic"
                android:onClick="saveEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
