<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nayem.tourguide.activity.NearbyResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"

        android:background="#51797979"
        android:id="@+id/nearbyHeaderLayout">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/backarrow"
                android:id="@+id/backToNearBy"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="30dp"
            android:gravity="center"
            android:text="test"
            android:id="@+id/headerTextView"

            />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nearbyListView"
        android:layout_below="@id/nearbyHeaderLayout">
    </ListView>

</RelativeLayout>
